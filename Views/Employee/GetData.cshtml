@{ ViewBag.Title = "GetData";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>All Employees</h2>

@(Html.Kendo().Grid<KendoEmployeeApp.Employee>()
    .Name("EmpGrid")
    .Columns(c =>
    {
        c.Bound(p => p.EmpId);
        c.Bound(p => p.EmpName);
        c.Bound(p => p.Address);
        c.Command(
            cmd =>
            {
                cmd.Edit();
                cmd.Destroy();
            });
    })
    .Excel(excel => excel
        .FileName("KendoGridExport.xlsx")
        .Filterable(true)
        .ProxyURL(Url.Action("GetData", "Employee"))
    )
    .DataSource(dataSource => dataSource.Ajax()
        .Read(read => read.Action("GetData", "Employee"))
        .Create(c => c.Action("Create_Employee", "Employee"))
        .Update(c => c.Action("Update_Employee", "Employee"))
        .Destroy(c => c.Action("Delete_Employee", "Employee"))
        .Model(m => { m.Id(p => p.EmpId); })
    )
    .Groupable()
    .Sortable()
    .Selectable()
    .Filterable()
    .Editable(e => e.Mode(GridEditMode.PopUp))
    .Pageable(p => p.Refresh(true).PageSizes(true).PreviousNext(true))
    .ToolBar(t => t.Excel())
    .ToolBar(t => t.Create())
)
